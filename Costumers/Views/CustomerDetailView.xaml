<UserControl x:Class="Costumers.Views.CustomerDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Costumers.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
            d:DesignHeight="450" d:DesignWidth="800">


        <Border Margin="24"
            CornerRadius="8"
            Background="{DynamicResource MaterialDesignPaper}"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="1"
          
            Effect="{DynamicResource MaterialDesignShadowEffect}">

            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
                    <materialDesign:PackIcon Kind="AccountCircle" 
                                      Width="32" 
                                      Height="32"
                                      Foreground="{DynamicResource PrimaryHueMidBrush}"
                                      Margin="0,0,12,0"/>

                    <TextBlock Text="{Binding Title}"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                           VerticalAlignment="Center"/>
                </StackPanel>


                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

      
                    <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Full Name"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesignBody}"/>

                    <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding Item.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsFieldsEnabled}"
                         materialDesign:HintAssist.Hint="Enter full name"
                         materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         FontSize="14"
                         MaxLength="100"
                         Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Email Address"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesignBody}"/>

                    <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding Item.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsFieldsEnabled}"
                         materialDesign:HintAssist.Hint="example@domain.com"
                         materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         FontSize="14"
                         MaxLength="100"
                         Margin="0,0,0,8"/>

                    
                </Grid>

                
                <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">
                    <Button Content="CANCEL"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        Width="120"
                        Height="40"
                        FontSize="14"
                        Margin="0,0,12,0">
                        <materialDesign:ButtonAssist.CornerRadius>4</materialDesign:ButtonAssist.CornerRadius>
                    </Button>

                    <Button Content="CONFIRM CHANGES"
                        Command="{Binding ConfirmCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Foreground="Black"
                        Width="195"
                        Height="40"
                        FontSize="14">
                        <materialDesign:ButtonAssist.CornerRadius>4</materialDesign:ButtonAssist.CornerRadius>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="ContentSave" 
                                                      Width="20" 
                                                      Height="20"
                                                      Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

</UserControl>


